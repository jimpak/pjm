<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.hospital.HospitalDetailFragment"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

    <TextView
        android:id="@+id/hospital_name"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="닥터주 동물병원"
        android:layout_marginBottom="30dp"/>

    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal">

        <TextView
            android:textSize="20sp"
            android:layout_marginRight="50dp"
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소" />

        <TextView
            android:textSize="16sp"
            android:id="@+id/hospital_address"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="부산시 해운대구 좌동순환로402번길" />

        <TextView
            android:textSize="20sp"
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
            android:text="대표전화" />

        <TextView
            android:textSize="16sp"
            android:id="@+id/hospital_phone"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="051-230-7578" />
    </GridLayout>

    <FrameLayout
        android:layout_marginTop="40dp"
        android:id="@+id/frame_map2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
            android:orientation="vertical">
    </FrameLayout>

</LinearLayout>