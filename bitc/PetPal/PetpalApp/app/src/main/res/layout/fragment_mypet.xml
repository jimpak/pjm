<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mypet.MypetFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:background="@drawable/doground"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/mypetBackgroud"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="122dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/petRecyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>



        <!--돌봄 등록-->

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/tvPetsitter_Rig"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="내 돌봄 등록"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/tvPetsitterrig_Ex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="내 돌봄 정보를 등록하고 \n관리하세요" />

                </LinearLayout>

                <LinearLayout
                        android:padding="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/petsitterRigimg"
                            android:layout_width="73dp"
                            android:layout_height="70dp"
                            android:background="#99ccff"
                            android:src="@drawable/dog1" />

                    <Button
                            android:id="@+id/petsitterRig"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="등록" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--돌봄 list-->

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/tvPetsitter_List"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="내 돌봄 리스트"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/tvPetsitter_Ex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="내 돌봄 정보를 확인하고 \n관리하세요" />

                </LinearLayout>

                <LinearLayout
                        android:padding="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/PetsitteListimg"
                            android:layout_width="73dp"
                            android:layout_height="70dp"
                            android:background="#ffc0cb"
                            android:src="@drawable/dog2" />

                    <Button
                            android:id="@+id/petsitterList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="등록" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--펫스타그램-->

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="3"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/tvStar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="펫스타그램"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/tvStarEx"
                            android:layout_width="wrap_content"
                            android:layout_height="53dp"
                            android:text="이웃 반려인들과 \n 반려생활을 고려하세요" />

                </LinearLayout>

                <LinearLayout
                        android:padding="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/starimo"
                            android:layout_width="73dp"
                            android:layout_height="70dp"
                            android:background="#E0F9B5"
                            android:padding="3dp"
                            android:src="@drawable/dog3" />

                    <Button
                            android:id="@+id/starInsert"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="등록" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/mypetAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            android:backgroundTint="#EFA5A5"
            app:rippleColor="@color/white"
            android:textSize="12sp"
            android:textAlignment="center"
            android:text="마이펫 등록하기"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="13dp" />

</RelativeLayout>