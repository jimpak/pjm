<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_marginTop="15dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="75dp"
            app:cardMaxElevation="5sp">


        <ImageView
            android:id="@+id/get_machingImageView"
                android:layout_width="80dp"
                android:scaleType="centerCrop"
                android:layout_height="80dp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/get_matching_nickname"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"

                    android:textSize="20sp"
                    android:text="TextView" />

            <ImageButton
                    android:id="@+id/get_open_chatroom"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:scaleType="fitXY"
                    android:src="@drawable/bubble_chat" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

              <TextView
            android:id="@+id/get_maching_type"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16sp"
           />

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#ffffff"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_gravity="right">
            <TextView
                android:padding="10dp"
                android:id="@+id/get_maching_stauts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:text="예약중"
              />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>