<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.pjm.boardsystem.mapper.AttachMapper">
    <insert id="insertAttach">
<!--        <selectKey resultType="int" keyProperty="bno" order="BEFORE">-->
<!--            select max(bno) from tbl_board-->
<!--        </selectKey>-->
        insert into tbl_attach (uuid, uploadpath, filename, filetype, bno)
        values (#{uuid}, #{uploadpath}, #{filename}, #{filetype}, #{bno})
    </insert>
    <delete id="deleteAttach">
        delete from tbl_attach where uuid = #{uuid}
    </delete>
    <select id="findByBno" resultType="org.pjm.boardsystem.vo.BoardAttachVO">
        select * from tbl_attach where bno = #{bno}
    </select>
    <delete id="deleteAll">
        delete from tbl_attach where bno = #{bno}
    </delete>
    <select id="getOldFiles" resultType="org.pjm.boardsystem.vo.BoardAttachVO">
        select * from tbl_attach where uploadpath = to_char(now() -100 , 'yyyy\mm\dd')
    </select>
</mapper>