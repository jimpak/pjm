package practice5;

public class test {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] scores = new int[2];
		scores[0] = 80;
		scores[1] = 70;
		scores[2] = 80;
		
		int sum = 0;
		int avg = 0;
		
		for(int i = 0; i <= 2; i++) {
			sum += scores[i];
			if(i == 2)
				avg = sum/i;
		}
		System.out.println(sum);
		System.out.println(avg);
	}

}
