package practice5;

//5. 클래스 실습문제2
public class Student {
	int sno;
	String name;
	String dept;
	int[] scores = new int[3];
	double avg;
	int rank;
	
	public Student(int sno, String name, String dept, int[] scores) {
		super();
		this.sno = sno;
		this.name = name;
		this.dept = dept;
		this.scores = scores;
	}
	
	public int sum(int[] scores) {
		int sum = 0;
		for(int scoreNum : scores) {
			sum += scoreNum;
		}
		
		return sum;
	}
	
	public int avg(int[] scores) {
		int sum = 0;
		
		for(int i = 0; i <= 2; i++) {
			sum += scores[i];
			if(i == 2)
				avg = sum/(i+1);
		}
		
		return avg;
	}
	
	
	
	
}
