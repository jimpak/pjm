package practice5;

//5. 클래스 실습문제2
public class Student {
	int sno;
	String name;
	String dept;
	int[] scores = new int[3];
	double avg;
	int rank;
	
	public Student(int sno, String name, String dept, int[] scores) {
		super();
		this.sno = sno;
		this.name = name;
		this.dept = dept;
		this.scores = scores;
	}
	
	public int sum(int[] scores) {
		int sum = 0;
		for(int num : scores) {
			sum += num;
		}
		
		return sum;
	}
	
	
	
	
}
