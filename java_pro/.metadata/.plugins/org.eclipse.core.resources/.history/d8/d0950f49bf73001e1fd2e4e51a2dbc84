package practice5;

//5. 클래스 실습문제2
public class Student {
	int sno;
	String name;
	String dept;
	int[] scores = new int[3];
	double avg;
	int rank;
	
	public Student(int sno, String name, String dept, int[] scores) {
		this.sno = sno;
		this.name = name;
		this.dept = dept;
		this.scores = scores;
	}
	
	public int sum(Student student) {
		int sum = 0;
		for(int scoreNum : scores) {
			sum += scoreNum;
		}	
		return sum;
	}
	
	public double avg(int[] scores) {
		int sum = 0;
		avg = 0;
		
		for(int i = 0; i <= 2; i++) {
			sum += scores[i];
			if(i == 2)
				avg = sum/(i+1);
		}	
		return avg;
	}
	
	public void print() {
		System.out.println("학번 이름   학과  성적1  성적2  성적3  총점   평균   석차");
		System.out.println("1   홍길동  영문  80    70    80   230  76.66  2");
	}
	
	
}
