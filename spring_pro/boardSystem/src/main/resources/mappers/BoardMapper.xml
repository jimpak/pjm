<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.pjm.boardsystem.mapper.BoardMapper">
    <select id="getTime" resultType="String">
        select now()
    </select>
    <select id="totalCount" resultType="int">
        select count(*) from tbl_board
    </select>
    <select id="get" resultType="org.pjm.boardsystem.vo.BoardVO">
        select * from tbl_board where bno=#{bno}
    </select>
    <update id="visitcountUpdate">
        update tbl_board set visitcount = visitcount + 1 where bno=#{bno}
    </update>
    <update id="updateBoard">
        update tbl_board set title=#{title}, content=#{content} where bno=#{bno}
    </update>
    <delete id="deleteBoard">
        delete from tbl_board where bno=#{bno}
    </delete>
    <insert id="insertBoard">
        insert into tbl_board(title, content, writer, postdate)
        values(#{title}, #{content}, #{writer}, #{postdate})
    </insert>
    <select id="getBoardList" resultType="org.pjm.boardsystem.vo.BoardVO">
        select * from tbl_board order by bno desc;
    </select>
</mapper>