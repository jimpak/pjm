<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.pjm.boardsystem.mapper.MemberMapper">
    <insert id="insertMember">
        insert into tbl_member(username, password, name, nick) values(#{username}, #{password}, #{name}, #{nick})
    </insert>
    <update id="updateMember">
        update tbl_member set password=#{password}, nick=#{nick} where username=#{username}
    </update>
    <delete id="deleteMember">
        delete from tbl_member where username=#{username}
    </delete>
    <select id="selectMember" resultType="org.pjm.boardsystem.vo.MemberVO">
        select * from tbl_member where username=#{username}
    </select>
</mapper>