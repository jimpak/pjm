<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.pjm.boardsystem.mapper.ReplyMapper">
    <insert id="insertReply">
        insert into tbl_reply(bno, reply, replyer) values(#{bno}, #{reply}, #{replyer})
    </insert>
    <select id="readReply" resultType="org.pjm.boardsystem.vo.ReplyVO">
        select * from tbl_reply where rno=#{rno}
    </select>
    <select id="getListReply" resultType="org.pjm.boardsystem.vo.ReplyVO">
        select * from tbl_reply where bno=#{bno}
    </select>
    <update id="updateReply">
        update tbl_reply set reply=#{reply} where rno=#{rno}
    </update>
    <delete id="deleteReply">
        delete from tbl_reply where rno=#{rno}
    </delete>
</mapper>